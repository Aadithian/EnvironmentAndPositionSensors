<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <Button
        android:id="@+id/btnGameRotationVector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GAME_ROTATION_VECTOR"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnGeomagneticRotationVector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GEOMAGNETIC_ROTATION_VECTOR"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnMagneticField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MAGNETIC_FIELD"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnOrientation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ORIENTATION"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnProximity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PROXIMITY"
        android:layout_marginBottom="16dp"/>



</LinearLayout>
